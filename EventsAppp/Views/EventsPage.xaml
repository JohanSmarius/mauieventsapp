<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:EventsAppp.ViewModels"
             xmlns:models="clr-namespace:EventsAppp.Models"
             x:Class="EventsAppp.Views.EventsPage"
             x:DataType="viewmodels:EventsViewModel"
             Title="Events">

    <Grid>
        <RefreshView Command="{Binding RefreshCommand}"
                     IsRefreshing="{Binding IsLoading}">
            <CollectionView ItemsSource="{Binding Events}"
                            BackgroundColor="Transparent">
                <CollectionView.EmptyView>
                    <StackLayout Padding="20">
                        <Label Text="No events found"
                               FontSize="18"
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                        <Button Text="Refresh"
                                Command="{Binding RefreshCommand}"
                                HorizontalOptions="Center"
                                Margin="0,10,0,0" />
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Event">
                        <Grid Padding="16,8">
                            <Border StrokeShape="RoundRectangle 8"
                                    Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                                    BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D30}">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:EventsViewModel}}, Path=GoToEventDetailCommand}"
                                                         CommandParameter="{Binding .}" />
                                </Border.GestureRecognizers>
                                
                                <StackLayout Padding="16">
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                    
                                    <Label Text="{Binding DateRangeShort}"
                                           FontSize="14"
                                           TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                           Margin="0,4,0,0" />
                                </StackLayout>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Loading Indicator -->
        <StackLayout IsVisible="{Binding IsLoading}"
                     HorizontalOptions="Center"
                     VerticalOptions="Center">
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                              Color="{StaticResource Primary}" />
            <Label Text="{Binding LoadingText}"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />
        </StackLayout>
    </Grid>
</ContentPage>